{
  "name": "cdk",
  "version": "0.1.0",
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy:dev": "cdk deploy --require-approval never --context envName=dev --context appName=trading-app --context region=ap-southeast-1",
    "deploy:prod": "cdk deploy --require-approval never --context envName=prod --context appName=trading-app --context region=ap-southeast-1",
    "destroy:dev": "cdk destroy --context envName=dev --context appName=trading-app --context region=ap-southeast-1",
    "destroy:prod": "cdk destroy --context envName=prod --context appName=trading-app --context region=ap-southeast-1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "aws-cdk": "2.1016.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.195.0",
    "constructs": "^10.0.0"
  }
}
